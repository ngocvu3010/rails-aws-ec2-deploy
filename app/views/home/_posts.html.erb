<article class="one_third <%= "first" if [1, 4, 7, 10, 13, 16].include?(index) %>">
  <figure><a href="#"><%= image_tag "boconganh.jpg" %></a>
    <figcaption>
      <time datetime="2045-04-06T08:15+00:00"><strong><%= post.created_at.strftime("%d") %></strong> <em>
        <%= post.created_at.strftime("%B") %></em></time>
    </figcaption>
  </figure>
  <div class="txtwrap">
    <h4 class="heading"><%= link_to post.title, post_path(post) %></h4>
    <ul class="nospace meta">
      <li>in <a href="#">Category Name</a></li>
    </ul>
    <p><%= post.body[0,100].html_safe %>&hellip;</p>
    <footer><%= link_to "Read More", post_path(post) %> &raquo;</footer>
  </div>
</article>
