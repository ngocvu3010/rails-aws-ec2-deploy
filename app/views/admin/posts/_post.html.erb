<tr>
  <td><%= image_tag "ngoc.jpg", style: "width: 50px; height: 50px" %></td>
  <td><%= post.title %></td>
  <td><%= post.body.truncate(150).html_safe %></td>
  <td><%= post.category %></td>
  <td><%= post.updated_at %></td>
  <td><%= link_to edit_admin_post_path(post), class: "btn" do %>
    <i class="fa fa-edit"></i>
  <% end %>
    <%= link_to admin_post_path(post.id), method: :delete,
      data: {confirm: "Are you Sure"}, class: "btn-icon btn-delete" do %>
        Delete
    <% end %>
  </td>
</tr>
